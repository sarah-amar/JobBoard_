<div class="container pt-5 pb-5">
    <div class="row">
        <div class="col-6">
            <h5>Admin board</h5>
        </div>
        <div class="col-6 d-flex justify-content-end">
            <a href="/users/create" type="button" class="btn btn-primary align-self-center">
                Add user
            </a>
        </div>
    </div>
    <br>
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">id</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col" class="text-end">Action</th>
            </tr>
        </thead>
        <tbody>

            {{#each users}}
            <tr>
                <th scope="row">{{this.id}}</th>
                <td>{{this.firstName}}</td>
                <td>{{this.lastName}}</td>
                <td>{{this.email}}</td>
                <td>{{this.phone}}</td>
                <td class="text-end">
                    {{!-- VIEW AN USER WITH ID --}}
                    <a href="/users/view/{{this.id}}" type="button" class="btn btn-light btn-small"><i
                            class="bi bi-eye"></i></a>
                    <a href="" type="button" class="btn btn-light btn-small"><i
                            class="bi bi-pencil"></i></a>
                    <a href="" type="button" class="btn btn-light btn-small"><i
                            class="bi bi-person-x"></i></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>