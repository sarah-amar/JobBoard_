<div class="container pt-5 pb-5">
    <!--ADMIN PAGE : ADD AN AD-->
    <div class="row">
        <div class="col-6">
            <h4>Admin board</h6>
        </div>
        <div class="col-6 d-flex justify-content-end">
            <a href="/advertissements/create" type="button" class="btn btn-primary align-self-center">
                Add an ad
            </a>
        </div>
    </div>
    <br>
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">id</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">City</th>
                <th scope="col">Duration</th>
                <th scope="col">Sector</th>
                <th scope="col">Introduction</th>
                <th scope="col">Contract Type</th>
                <th scope="col" class="text-end">Action</th>
            </tr>
        </thead>
        <tbody>

            {{#each advertissements}}

            <tr>
                <th scope="row">{{this.id}}</th>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.city}}</td>
                <td>{{this.duration}}</td>
                <td>{{this.sector}}</td>
                <td>{{this.intro}}</td>
                <td>{{this.contractType}}</td>
                   <td class="text-end">
                    <a href="/advertissements/view/{{this.id}}" type="button" class="btn btn-light btn-small"><i
                            class="bi bi-eye"></i></a>
                    <a href="" type="button" class="btn btn-light btn-small"><i
                            class="bi bi-pencil"></i></a>
                    <a href="" type="button" class="btn btn-light btn-small"><i
                            class="bi bi-person-x"></i></a>
                </td>
                {{!-- <td class="text-end">
                    <a href="/viewad/{{id}}" type="button" class="btn btn-light btn-small"><i
                            class="bi bi-eye"></i>View</a>
                    <a href="/editad/{{id}}" type="button" class="btn btn-light btn-small"><i
                            class="bi bi-pencil"></i>Edit</a>
                    <a href="/deletead/{{id}}" type="button" class="btn btn-light btn-small"><i
                            class="bi bi-person-x"></i>Delete</a>
                </td> --}}
            </tr>
            {{/each}}
        </tbody>
    </table>

</div>